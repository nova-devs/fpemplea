                            {% if res|length != 0 %}
                                <nav aria-label="Page navigation">
                                    <ul class="pagination">
                                        {% if app.request.get("education") is null %}
                                            <li><a href="{{ path('applicant_search', {'page': 1, 'idUser':app.user.id, 'parm1':app.request.get("parm1")}) }}">&laquo;</a></li>
                                        {% else %}
